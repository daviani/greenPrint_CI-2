{% extends "base.html.twig" %}
{% block title %}Agence GreenPrint{% endblock %}
{% block body %}
    <div class="container text-center" style="margin-top: 130px!important;">
        <div class="card">
            <div class="card-header card-header-success card-header-tabs">
                <h1 class="display-3">Welcome to your agency's website</h1>
            </div>
            <div class="card-body m-3 p-3">
                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Autem commodi culpa, cupiditate enim error
                explicabo facere id inventore libero molestias nostrum odio optio porro quas, qui repellendus
                reprehenderit velit veritatis.
            </div>
        </div>
    </div>
    <div class="container text-center">
        <h2>Our latest offers available for purchase</h2>
        <div class="row flex-sm-row">
            {% for property in properties %}
                <div class="col-4">
                    <div class="card">
                        <div class="card-header card-header-success">
                            <h5 class="card-title">
                                <a href="{{ path('property.show', {id:property.id, slug:property.slug }) }}">
                                    {{ property.title }}
                                </a>
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text text-center">
                                {{ property.city }} {{ property.postalCode }} <br> {{ property.country }}
                            </p>
                            <p class="text-primary display-4">
                                <strong>  {{ property.formattedPrice }} â‚¬</strong>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="w-100" style="height: 100px"></div>
{% endblock %}